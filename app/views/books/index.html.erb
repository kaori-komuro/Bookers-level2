<%= render 'books/header', books: @books %>

<%= render 'books/profile', books: @books %>

<div class="col-lg-9">

    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
 <% @books.each do |book| %>
      <tr>
        <td>
    <%= attachment_image_tag current_user, :profile_image, size: "40x40", format: 'jpeg', fallback: "sample-author1.jpg" %>
    </td>
        <td><%= link_to "#{book.title}", "#{book_path(book.id)}", class: 'book_#{book.id}' %></td>
        <td><%= book.body %></td>
 <% end %>
  </tbody>
</table>

</div>
</div>
</div>
