<%= render 'books/header', books: @books %>

<div class='body'>
  <div class='container'>
<br>

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>
         <div class="field"><%= f.label :username %><br />
             <%= f.text_field :username, class: 'name' %></div>

        <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email' %>
        </div>

         <div class="field"><%= f.label :password %><br />
             <%= f.password_field :password, class: 'password' %></div>

         <div class="field"><%= f.label :password_confirmation %><br />
             <%= f.password_field :password_confirmation, class: 'password_confirm' %></div>

         <div class="actions"><%= f.submit "Sign up" %></div>
    <% end %>

<%= render "devise/shared/links" %>

</div>
</div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>