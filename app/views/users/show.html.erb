<%= render 'books/header', books: @books %>
<div class='body'>
  <div class='container'>
    <div class="col-lg-3">
<br>
        <p id="notice"></p>

<h3>User info</h3>

<div class="profile-container">
  <table class='table'>
    <tr>
       <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "sample-author1.jpg" %>
    </tr>
    <tr>
        <th>name</th>
        <th>
          <%= @user.name %>
        </th>
      <tr>
        <th>introduction</th>
        <th>
          <%= @user.introduction %>
        </th>
      </tr>
</table>

<div class='row'>
    <% if @user.id == current_user.id %>
        <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_1282" %>
    <% end %>
</div>

</div>

<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>

<div class="field row">
<label for="user_name">Title</label>
<%= f.text_field :title, class: "col-xs-12 book_body" %>
</div>

<div class="field row">
<label for="user_name">Opinion</label>
<%= f.text_area :body, class: "col-xs-12 book_body" %>
</div>

<div class="field row">
<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
<% end %>
</div>

</div>

<div class="col-lg-9">
  <br>
  <p id="notice"></p>
<h3>Books</h3>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "sample-author1.jpg" %></td>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id), class: "show_1" %>
<%= link_to "edit", book_path(book.id), class: "edit_1" %>
<% if @book.user == current_user %>
<%= link_to "destroy", book_path(book.id), class: "destroy_1", method: :delete,"data-confirm" => "Are you sure?" %>
<% end %>
</tr>
<% end %>
</tbody>
</table>

<br>
</div>
</div>
</div>

    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>