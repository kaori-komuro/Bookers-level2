<%= render 'books/header', books: @books %>

<div class="col-lg-9">
  <br>
  <p id="notice"></p>
<h3>Books</h3>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @books.each do |book| %>
<tr>
<td><%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "sample-author1.jpg" %></td>
<td>
<%= book.title %>
</td>
<td>
<%= book.body %>
</td>
<td>
<%= link_to "show", book_path(book.id), class: "show_1" %>
<%= link_to "edit", book_path(book.id), class: "edit_1" %>
<% if @book.user == current_user %>
<%= link_to "destroy", book_path(book.id), class: "destroy_1", method: :delete,"data-confirm" => "Are you sure?" %>
<% end %>
</tr>
<% end %>
</tbody>
</table>

<br>
</div>
</div>
</div>

    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>