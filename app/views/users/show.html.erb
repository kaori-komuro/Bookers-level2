<%= render 'books/header', books: @books %>

    <div class='body'>
      <div class='container'>

        <p id="notice"><% if flash[:notice] %>
       <%= flash[:notice] %>
<% end %></p>
        <div class='row'>
    <div class="col-lg-3">
<h2>User info</h2>

<div class="profile-container">
  <table class='table'>
    <tr>
       <%= attachment_image_tag @users, :profile_image, :fill, 100, 100, fallback: "sample-author1.jpg" %>
    </tr>
    <tr>
        <th>name</th>
        <th>
          <%= @users.username %>
        </th>
      <tr>
        <th>introduction</th>
        <th>
          <%= @users.introduction %>
        </th>
      </tr>
</table>

<div class='row'>
    <% if @users == current_user %>
      <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
    <% else %>
      <%= link_to "", user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
    <% end %>
</div>

</div>

<h3>New book</h3>

<%= form_for(@book) do |f| %>

<div class="field row">
<label for="user_name">Title</label>
<%= f.text_field :title, class: "col-xs-12 book_body" %>
</div>

<div class="field row">
<label for="user_name">Opinion</label>
<%= f.text_area :body, class: "col-xs-12 book_body" %>
</div>

<div class="field row">
<%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
<% end %>
</div>

</div>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, fallback: "sample-author1.jpg" %></td>
        <td><%= link_to "#{book.title}", "#{book_path(book.id)}" %></td>
        <td><%= book.body %></td>
      </tr>
  		 <% end %>
    </tr>
</tbody>
  </thead>

</table>

</div>
</div>
</div>
    <footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
